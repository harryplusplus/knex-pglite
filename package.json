{
  "name": "@harryplusplus/knex-pglite",
  "version": "0.11.0",
  "description": "PGlite dialect for Knex.js.",
  "keywords": [
    "knex",
    "knex-pglite",
    "pg",
    "pglite",
    "postgres",
    "postgresql"
  ],
  "homepage": "https://github.com/harryplusplus/knex-pglite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harryplusplus/knex-pglite.git"
  },
  "license": "MIT",
  "author": {
    "name": "harryplusplus",
    "email": "harryplusplus@gmail.com",
    "url": "https://harryplusplus.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "all": "run-s generate:readme-toc format lint test build",
    "build": "run-s clean build:js build:types",
    "build:js": "tsup",
    "build:types": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "format": "run-p format:*",
    "format:package-json": "sort-package-json package.json",
    "format:readme": "prettier -w README*.md",
    "generate:readme-toc": "for file in $(glob 'README*.md'); do markdown-toc -i \"$file\"; done",
    "lint": "eslint",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "@eslint/js": "9.36.0",
    "@types/node": "24.6.2",
    "copyfiles": "2.4.1",
    "eslint": "9.36.0",
    "glob": "11.0.3",
    "jsdom": "27.0.0",
    "json-sort-cli": "4.0.10",
    "knex": "^3.1.0",
    "markdown-toc": "1.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "sort-package-json": "3.4.0",
    "tsup": "8.5.0",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "typescript-eslint": "8.45.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "knex": "^3.1.0"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">= 20.19.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
