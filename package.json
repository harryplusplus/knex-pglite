{
  "name": "@harryplusplus/knex-pglite",
  "version": "0.2.1",
  "description": "PGlite dialect for Knex.js.",
  "keywords": [
    "knex",
    "knex-pglite",
    "pg",
    "pglite",
    "postgres",
    "postgresql"
  ],
  "homepage": "https://github.com/harryplusplus/knex-pglite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harryplusplus/knex-pglite.git"
  },
  "license": "MIT",
  "author": {
    "email": "harryplusplus@gmail.com",
    "name": "harryplusplus",
    "url": "https://harryplusplus.com"
  },
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "all": "run-s generate:readme-toc format lint test build",
    "build": "run-s clean build:cjs build:esm",
    "build:cjs": "tsc -p tsconfig.build.json",
    "build:esm": "gen-esm-wrapper dist dist/index.mjs",
    "clean": "rimraf dist",
    "format": "run-p format:*",
    "format:config": "jsonsort -a package.json cspell.json",
    "format:readme": "prettier -w README*.md",
    "generate:readme-toc": "for file in $(glob 'README*.md'); do markdown-toc -i \"$file\"; done",
    "lint": "eslint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "@eslint/js": "9.36.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.6.2",
    "eslint": "9.36.0",
    "gen-esm-wrapper": "1.1.3",
    "glob": "11.0.3",
    "jest": "30.2.0",
    "json-sort-cli": "4.0.10",
    "knex": "^3.1.0",
    "markdown-toc": "1.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.45.0"
  },
  "peerDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "knex": "^3.1.0"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">= 20.19.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
